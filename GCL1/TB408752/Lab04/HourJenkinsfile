pipeline {
    agent any

    stages {
        stage('Check Hour') {
            steps {
                script {
                    def currentHour = new Date().format("H").toInteger()

                    echo "Current hour: ${currentHour}"

                    if (currentHour % 2 != 0) {
                        error "Failing the build because the hour is odd."
                    } else {
                        echo "The hour is even. Continuing with the build."
                    }
                }
            }
        }
    }

    post {
        failure {
            echo "Build failed. The hour was odd."
        }
    }
}
