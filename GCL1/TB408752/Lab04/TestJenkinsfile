pipeline {
    agent any

    stages {
        stage('Print Message') {
            steps {
                echo 'Hello, this is a test Jenkins pipeline!'
            }
        }

        stage('Run Shell Command') {
            steps {
                sh 'echo "Executing a shell command"'
                sh 'ls -al'
            }
        }

        stage('Echo Information') {
            steps {
                echo 'Building on node: ' + env.NODE_NAME
                echo 'Running on agent: ' + env.AGENT_NAME
                echo 'Current build number: ' + env.BUILD_NUMBER
            }
        }

        stage('Clean Up') {
            steps {
                echo 'Performing clean-up tasks...'
                // Add any clean-up tasks you may need here
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
